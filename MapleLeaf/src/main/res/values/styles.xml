<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="progressLayoutDefStyle">@style/progressLayoutStyle</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultSmartStyle">
        <item name="loading_layout">@layout/default_loading_layout</item>
        <item name="none_content">@layout/default_none_layout</item>
        <item name="network_content">@layout/default_connectionless_layout</item>
        <item name="failed_content">@layout/default_failed_layout</item>
    </style>

    <style name="message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/material_16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/material_18sp</item>
    </style>

    <style name="hint_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/material_16dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/material_13sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/material_4dp</item>
        <item name="android:textSize">@dimen/material_11sp</item>
    </style>

    <style name="progressLayoutStyle">
        <item name="loading_layout">@layout/loading_layout</item>
        <item name="none_content">@layout/none_layout</item>
        <item name="network_content">@layout/connectionless_layout</item>
        <item name="failed_content">@layout/failed_layout</item>
    </style>

</resources>